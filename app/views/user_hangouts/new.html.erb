<div class="container my-5 ">

  <div class="col-md-6 mb-3">
    <%= f.label :location, "City", class:'control-label' %> 
    <%= f.collection_select(:location_id, Location.all, :id, :city, { promt: 'Choose City' }, { class: 'form-control', required: true }) %>         
  </div>

  <%= form_for(@userhangout) do |f| %>
    <%= f.label :location, "Pick a match!" %><br><br>
    <%= f.collection_select(:user_id, current_user.match, :id, :username) %><br><br>  
    <%= f.submit "Choose Match" %>
  <% end %>

<div class="row">
<% if current_user.hangouts.count != 0 %>
<h1 class="display-4 mb-4 mx-3 text-info">Wanna hang out with...</h1>
<div class="col-sm-12"></div>
  <% current_user.match.each do |user| %>
      <% if user.id != current_user.id %>
        <div class="col-sm-4">
          <div class="card bg-light text-dark shadow">
            <div class="card-body">
              <p class="card-text font-italic font-weight-light text-success">Check out how much you match!</p>
              <div class="progress my-3">
                <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 40%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
              <h5 class="card-title font-italic h3"><%= user.first_name %> <%= user.last_name %><br></h5>
              <p>Username: <span class="h6"><%= user.find_match.username %></span></p>
              <p>Age <span class="h6"><%= user.find_match.age %></span></p>
              <p>City: <span class="h6"><%= user.find_match.location.city %></span></p>
              <div class="dropdown-divider"></div>
              <p class="card-text font-italic font-weight-light"><%= user.bio %>.</p>
              <div class="dropdown-divider"></div>
            </div>
          </div>
        </div>
        <% end %>
    <% end %>
<% else %>
  <h1 class="display-4">You have no hangouts yet!</h1>
<% end %>
</div>
</div>
</div>